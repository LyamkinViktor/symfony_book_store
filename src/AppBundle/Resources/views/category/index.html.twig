{% extends '@App/layout.html.twig' %}

{% block title %}
    Category list
{% endblock %}

{% block body %}
<div><h1>Categories:</h1></div>
    <p>
        {% for category in categories %}
            <div><a href="{{ path('books_by_category', { id: category.id }) }}">{{ category.name }}</a></div>
        {% endfor %}
    </p>
{% endblock %}



